<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IslamicInfo">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:elevation="5dp"
            app:cardCornerRadius="10dp"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


<!--                <androidx.cardview.widget.CardView-->
<!--                    android:id="@+id/duaImg"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="120dp"-->
<!--                    app:cardCornerRadius="10dp"-->
<!--                    android:elevation="5dp"-->
<!--                    app:layout_constraintBottom_toTopOf="@+id/duatxt"-->
<!--                    app:layout_constraintEnd_toEndOf="parent"-->
<!--                    app:layout_constraintStart_toStartOf="parent"-->
<!--                    app:layout_constraintTop_toTopOf="parent" >-->
                    <ImageView
                        android:id="@+id/duaImg1"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@drawable/prayerimg"
                        android:scaleType="centerCrop"
                        app:layout_constraintBottom_toTopOf="@+id/duatxt"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

<!--                </androidx.cardview.widget.CardView>-->

                <TextView
                    android:id="@+id/duatxt"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="Dua"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14dp"
                    app:layout_constraintEnd_toEndOf="@+id/duaImg1"
                    app:layout_constraintStart_toStartOf="@+id/duaImg1"
                    app:layout_constraintTop_toBottomOf="@+id/duaImg1" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:elevation="5dp"
            app:cardCornerRadius="8dp"
            tools:layout_editor_absoluteX="154dp"
            tools:layout_editor_absoluteY="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/quranVersesimg"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/quranverses"
                    app:layout_constraintBottom_toTopOf="@+id/quranVersestxt"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/quranVersestxt"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="Quran Verses"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14dp"
                    app:layout_constraintEnd_toEndOf="@+id/quranVersesimg"
                    app:layout_constraintStart_toStartOf="@+id/quranVersesimg"
                    app:layout_constraintTop_toBottomOf="@+id/quranVersesimg" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:elevation="5dp"
            app:cardCornerRadius="8dp"
            tools:layout_editor_absoluteX="282dp"
            tools:layout_editor_absoluteY="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/quranSurahimg"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/quransurah"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toTopOf="@+id/quranSurahtxt"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/quranSurahtxt"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="Quran Surah"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14dp"
                    app:layout_constraintEnd_toEndOf="@+id/quranSurahimg"
                    app:layout_constraintStart_toStartOf="@+id/quranSurahimg"
                    app:layout_constraintTop_toBottomOf="@+id/quranSurahimg" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:elevation="5dp"
            app:cardCornerRadius="8dp"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/worshipImg"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/worship"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toTopOf="@+id/worshiptxt"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/worshiptxt"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="Worship"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14dp"
                    app:layout_constraintEnd_toEndOf="@+id/worshipImg"
                    app:layout_constraintStart_toStartOf="@+id/worshipImg"
                    app:layout_constraintTop_toBottomOf="@+id/worshipImg" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:elevation="5dp"
            app:cardCornerRadius="8dp"
            tools:layout_editor_absoluteX="154dp"
            tools:layout_editor_absoluteY="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/hadithimg"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/hadith"
                    app:layout_constraintBottom_toTopOf="@+id/hadithtxt"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/hadithtxt"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="Hadith"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14dp"
                    app:layout_constraintEnd_toEndOf="@+id/hadithimg"
                    app:layout_constraintStart_toStartOf="@+id/hadithimg"
                    app:layout_constraintTop_toBottomOf="@+id/hadithimg" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:elevation="5dp"
            app:cardCornerRadius="8dp"
            tools:layout_editor_absoluteX="282dp"
            tools:layout_editor_absoluteY="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/AllahNamesimg"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/names"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toTopOf="@+id/AllahNamestxt"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/AllahNamestxt"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="Allah Names"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14dp"
                    app:layout_constraintEnd_toEndOf="@+id/AllahNamesimg"
                    app:layout_constraintStart_toStartOf="@+id/AllahNamesimg"
                    app:layout_constraintTop_toBottomOf="@+id/AllahNamesimg" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>