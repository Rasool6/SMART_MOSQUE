<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddPrayerTimeActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Prayer Time for Your Mosque"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:maxLines="1"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Add Prayer Name"
        android:inputType="textEmailAddress"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:maxLines="1"
        android:id="@+id/edtPrayerName"
        android:background="@drawable/bg_edt"
        android:paddingLeft="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="Time"
            android:background="@drawable/bg_edt"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:padding="14dp"
            android:id="@+id/edtPrayerTime"/>
        <ImageView
            android:id="@+id/pick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/time"
            android:paddingRight="8dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_height="40dp"/>
    </LinearLayout>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Share Islamic Information about Prayer"
        android:inputType="textEmailAddress"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/edtAboutPrayer"
        android:background="@drawable/bg_edt"
        android:paddingLeft="20dp"
        />

    <Button
        android:id="@+id/addPrayerBtnId"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/bg_btn"
        android:text="Add Prayer"
        android:textSize="18sp"
        />



</LinearLayout>