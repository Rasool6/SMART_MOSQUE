<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateMosqueProfile">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="10dp"
        android:id="@+id/mosquePicUpdateId">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/profilepic"
            android:id="@+id/imgProMosq"
            android:scaleType="fitXY"
            />
    </androidx.cardview.widget.CardView>

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/mosquePicUpdateId"
        >



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linearPromosq"

                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_edt"
                    android:hint="Mosque Name"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:paddingLeft="10dp"
                    android:id="@+id/mosquenameUpdateId"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_edt"
                    android:hint="Imam Name"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/imamnameUpdateid"

                    />
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_edt"
                   android:entries="@array/sect"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:paddingLeft="1dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/locationUpdateId"
                    android:drawableLeft="@drawable/ic_location"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_edt"
                    android:hint="City"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:paddingLeft="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/mosquecityUpdateid"
                    />
                <!--                <TextView-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:text="Mosque Name"-->
                <!--                    android:textSize="18sp"-->
                <!--                    android:textColor="@color/colorPrimaryDark"-->
                <!--                    android:paddingLeft="10dp"-->
                <!--                    android:layout_marginTop="5dp"-->
                <!--                    -->
                <!--                    />-->
                <!--                <TextView-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:text="Mosque Name"-->
                <!--                    android:textSize="18sp"-->
                <!--                    android:textColor="@color/colorPrimaryDark"-->
                <!--                    android:paddingLeft="10dp"-->
                <!--                    android:layout_marginTop="5dp"-->
                <!--                    />-->
                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/mosquUpdateProgressId"
                    android:visibility="gone"/>
                <Button
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="12dp"
                    android:text="Update"
                    android:layout_below="@+id/linearPromosq"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:id="@+id/updateMosqueProbtn"
                    android:background="@drawable/bg_edt"/>
            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

</RelativeLayout>