<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textSize="20dp"
                    android:paddingLeft="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/titlshow"
                    android:paddingBottom="3dp"
                    />

                <ImageView
                    android:id="@+id/popUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-28dp"
                    android:padding="5dp"
                    android:layout_toRightOf="@+id/titlshow"
                    android:src="@drawable/ic_more" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="3dp"
                android:background="#C3C0C0"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/infoShowImageId"
                android:scaleType="fitXY"
                android:layout_margin="3dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="3dp"
                android:background="#C3C0C0"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textSize="16dp"
                    android:paddingLeft="15dp"
                    android:textStyle="normal"
                    android:layout_weight="1"
                    android:paddingBottom="3dp"
                    android:paddingRight="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textSize="16dp"
                    android:layout_weight="1"
                    android:paddingLeft="15dp"
                    android:textStyle="normal"
                    android:id="@+id/inforspinnerId"
                    android:paddingBottom="3dp"
                    android:paddingRight="10dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detail"
                android:textSize="16dp"
                android:paddingLeft="15dp"
                android:textStyle="normal"
                android:id="@+id/detailshow"
                android:paddingBottom="3dp"
                android:paddingRight="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="3dp"
                android:background="#C3C0C0"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current_date"
                android:textSize="14sp"
                android:paddingLeft="15dp"
                android:textStyle="italic"
                android:gravity="end"
                android:id="@+id/infoDate"
                android:paddingRight="15dp"
                android:paddingBottom="3dp"/>
            <!--             <View-->
            <!--                 android:layout_width="match_parent"-->
            <!--                 android:layout_height="1dp"-->
            <!--                 android:layout_margin="3dp"-->
            <!--                 android:background="#918E8E"-->
            <!--                 />-->




        </LinearLayout>




    </androidx.cardview.widget.CardView>

</LinearLayout>