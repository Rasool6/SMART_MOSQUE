<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/praytimeshowCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="10dp"
        >

        <RelativeLayout
            android:id="@+id/relativepraytimshow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:id="@+id/linearHor1">
                <TextView
                    android:id="@+id/prayerNameshow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="PrayerName"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/editpraytime"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="143dp"
                    android:src="@drawable/ic_edit"
                    android:layout_weight="1"/>

                            <ImageView
                                android:id="@+id/deletpraytime"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="0dp"
                                android:src="@drawable/ic_delete"
                                android:layout_weight="1"/>

            </LinearLayout>







            <TextView
                android:id="@+id/prayerTimeshow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearHor1"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Prayer Time"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/heading1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prayerTimeshow"
                android:maxLength="100"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="About Prayer"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/aboutPrayershow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/heading1"
                android:maxLength="100"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="About Prayer"
                android:textSize="16dp"
                android:textStyle="normal"
                />

            <TextView
                android:id="@+id/detailPrytimBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/aboutPrayershow"
               android:gravity="end"
                android:text="Detail"
                android:drawableRight="@drawable/ic_next"
                android:textSize="20dp"
                android:textStyle="italic"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/currentdateshow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detailPrytimBtn"
                android:layout_alignParentRight="true"
                android:maxLength="100"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="CurrentDAte"
                android:textSize="10dp"
                android:textStyle="normal"
                android:layout_marginRight="10dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>